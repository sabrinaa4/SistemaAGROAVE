<Window x:Class="SistemaAGROAVE.Views.RegistrarAves"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaAGROAVE.Views"
        mc:Ignorable="d"
        Title="RegistrarAves" Height="450" Width="800">
    <Grid>
        <Image Margin="375,-376,375,9" Source="/Image1.png" Stretch="Fill" Width="50" RenderTransformOrigin="0.5,0.5" Height="NaN">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90.018"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Label Content="REGISTRAR AVES" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-11.579,-4.698" FontFamily="Arial" FontWeight="Bold" Width="172" FontSize="18" Height="37" Foreground="White"/>
        <Label Content="GALPÃO N°:" HorizontalAlignment="Left" Margin="25,75,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial" FontWeight="Bold"/>
        <Label Content="RAÇA:" HorizontalAlignment="Left" Margin="29,148,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial" FontWeight="Bold"/>
        <TextBox x:Name="txtRaca" HorizontalAlignment="Left" Margin="30,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205" RenderTransformOrigin="0.5,0.5" TextBlock.FontFamily="Arial" Height="21">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.044"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Label Content="OBSERVAÇÕES:" HorizontalAlignment="Left" Margin="29,214,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial" FontWeight="Bold"/>
        <TextBox x:Name="txtObservacao" HorizontalAlignment="Left" Margin="29,243,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="371" Height="100" TextBlock.FontFamily="Arial"/>
        <TextBox x:Name="txtGalpao" HorizontalAlignment="Left" Margin="25,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="126" Height="22" TextBlock.FontFamily="Arial"/>
        <Label Content="LOTE:" HorizontalAlignment="Left" Margin="212,74,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial" FontWeight="Bold"/>
        <TextBox x:Name="txtLote" HorizontalAlignment="Left" Margin="212,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="194" Height="22" TextBlock.FontFamily="Arial"/>
        <Label Content="QUANTIDADE DE MORTES:" HorizontalAlignment="Left" Margin="322,147,0,0" VerticalAlignment="Top" RenderTransformOrigin="-11.579,-4.698" FontFamily="Arial" FontWeight="Bold" Width="169"/>
        <TextBox x:Name="txtQtdMortes" HorizontalAlignment="Left" Margin="322,173,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="169" Height="22"/>
        <Label Content="DATA DE ENTRADA:" HorizontalAlignment="Left" Margin="499,72,0,0" VerticalAlignment="Top" RenderTransformOrigin="-11.579,-4.698" FontFamily="Arial" FontWeight="Bold" Width="132"/>
        <Label Content="COR:" HorizontalAlignment="Left" Margin="580,147,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial" FontWeight="Bold" RenderTransformOrigin="-0.996,5.413"/>
        <ComboBox x:Name="cbCor" HorizontalAlignment="Left" Margin="580,173,0,0" VerticalAlignment="Top" Width="186" Height="22">
            <ComboBoxItem>Marrom</ComboBoxItem>
            <ComboBoxItem>Preta</ComboBoxItem>
            <ComboBoxItem>Branco</ComboBoxItem>
        </ComboBox>
        <Button Content="Voltar" HorizontalAlignment="Left" Margin="67,365,0,0" VerticalAlignment="Top" Width="126" Height="33" Background="#FF1E4B88" FontFamily="Arial" FontWeight="Bold" Foreground="White" BorderBrush="#FF1E4B88" Click="Button_Click_1"/>
        <Button Content="Salvar"  HorizontalAlignment="Left" Margin="641,365,0,0" VerticalAlignment="Top" Width="126" Height="33" Background="#FF1E4B88" FontFamily="Arial" FontWeight="Bold" Foreground="White" BorderBrush="#FF1E4B88" Click="Button_Click"/>
        <Button Content="Cancelar" HorizontalAlignment="Left" Margin="473,365,0,0" VerticalAlignment="Top" Width="127" Height="33" Background="#FF1E4B88" FontFamily="Arial" FontWeight="Bold" Foreground="White" BorderBrush="#FF1E4B88" Click="Button_Click_2"/>
        <Button x:Name="btnConsultarAves" Content="Consultar Aves" HorizontalAlignment="Left" Margin="536,277,0,0" VerticalAlignment="Top" Width="180" Height="32" Background="#FF1E4B88" FontFamily="Arial" FontWeight="Bold" Foreground="White" BorderBrush="#FF1E4B88" Click="btnConsultarAves_Click"/>
        <TextBox x:Name="txtDataEntrada" HorizontalAlignment="Left" Margin="510,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="194" Height="22" TextBlock.FontFamily="Arial"/>
    </Grid>
</Window>
