<Window x:Class="SistemaAGROAVE.Views.CadastrarProduto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaAGROAVE.Views"
        mc:Ignorable="d"
        Title="CadastrarProduto" Height="450" Width="800">
    <Grid x:Name="txtNome">
        <TextBlock HorizontalAlignment="Left" Margin="40,10,0,0" TextWrapping="Wrap" Text="CADASTRAR PRODUTO" VerticalAlignment="Top" FontFamily="Arial" Height="24" Width="340" FontSize="16" FontWeight="Bold"/>
        <Label Content="NOME :" HorizontalAlignment="Left" Margin="70,63,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial" FontWeight="Bold"/>


        <Label Content="CÓDIGO DE BARRAS:" HorizontalAlignment="Left" Margin="71,116,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial" FontWeight="Bold"/>
        <TextBox x:Name="txtCodigo" HorizontalAlignment="Left" Margin="72,139,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="221" RenderTransformOrigin="0.5,0.5" TextBlock.FontFamily="Arial" Height="21">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.044"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>

        <Label Content="DESCRIÇÃO:" HorizontalAlignment="Left" Margin="70,230,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial" FontWeight="Bold"/>
        <TextBox x:Name="txtDescricao" HorizontalAlignment="Left" Margin="70,256,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280" Height="99" TextBlock.FontFamily="Arial"/>

        <Label Content="VALOR:" HorizontalAlignment="Left" Margin="496,63,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial" FontWeight="Bold"/>
        <TextBox x:Name="txtValor" HorizontalAlignment="Left" Margin="496,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175" Height="22" TextBlock.FontFamily="Arial"/>

        <Label Content="DATA DE FABRICAÇÃO:" HorizontalAlignment="Left" Margin="390,143,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial" FontWeight="Bold"/>

        <Label Content="DATA DE VALIDADE:" HorizontalAlignment="Left" Margin="635,143,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial" FontWeight="Bold"/>
        <Button Content="CONSULTAR PRODUTO" HorizontalAlignment="Left" Margin="475,306,0,0" VerticalAlignment="Top" Width="217" TextBlock.FontFamily="Arial" Background="#FFB4E1F9" Height="25" FontWeight="Bold"/>
        <Button Content="VOLTAR" HorizontalAlignment="Left" Margin="133,377,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial" Foreground="Black" BorderBrush="#FF77BBE0" Background="#FF77BBE0" Height="25" Width="95"/>
        <Button Content="SALVAR" HorizontalAlignment="Left" Margin="414,377,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial" Foreground="Black" BorderBrush="#FF77BBE0" Background="#FF77BBE0" Height="25" Width="96"/>
        <Button Content="CANCELAR" HorizontalAlignment="Left" Margin="673,377,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial" Foreground="Black" BorderBrush="#FF77BBE0" Background="#FF77BBE0" Height="25" Width="95"/>
        <TextBox HorizontalAlignment="Left" Margin="70,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" Height="22" TextBlock.FontFamily="Arial"/>
        <Label Content="ORIGEM :" HorizontalAlignment="Left" Margin="71,169,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial" FontWeight="Bold"/>
        <TextBox x:Name="txtOrigem" HorizontalAlignment="Left" Margin="71,195,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" Height="22" TextBlock.FontFamily="Arial"/>
        <DatePicker x:Name="dpFabricacao" HorizontalAlignment="Left" Margin="390,172,0,0" VerticalAlignment="Top" Width="174"/>
        <DatePicker x:Name="dpValidade" HorizontalAlignment="Left" Margin="612,172,0,0" VerticalAlignment="Top" Width="174"/>
    </Grid>
</Window>
