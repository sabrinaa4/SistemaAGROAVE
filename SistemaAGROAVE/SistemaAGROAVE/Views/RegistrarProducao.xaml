<Window x:Class="SistemaAGROAVE.Views.RegistrarProducao"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaAGROAVE.Views"
        mc:Ignorable="d"
        Title="RegistrarProducao" Height="450" Width="800">
    <Grid>
        <Grid x:Name="txtNome" Margin="0,16,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="19*"/>
                <ColumnDefinition Width="381*"/>
            </Grid.ColumnDefinitions>
            <Label Content="QUANTIDADE DE AVES:" HorizontalAlignment="Left" Margin="8,66,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial" FontWeight="Bold" Grid.Column="1"/>


            <Label Content="PRODUÇÃO DIÁRIA:" HorizontalAlignment="Left" Margin="1,116,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial" FontWeight="Bold" Grid.Column="1"/>
            <TextBox x:Name="txtProducaoDiaria" HorizontalAlignment="Left" Margin="6,137,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="221" RenderTransformOrigin="0.5,0.5" TextBlock.FontFamily="Arial" Height="21" Grid.Column="1">
                <TextBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-0.044"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBox.RenderTransform>
            </TextBox>

            <Label Content="DESCRIÇÃO:" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" TextBlock.FontFamily="Arial" FontWeight="Bold" Grid.Column="1"/>
            <TextBox x:Name="txtDescricao" HorizontalAlignment="Left" Margin="10,218,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="260" Height="98" TextBlock.FontFamily="Arial" Grid.Column="1"/>

            <Label Content="DATA:" HorizontalAlignment="Left" Margin="524,63,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial" FontWeight="Bold" Grid.Column="1"/>
            <TextBox x:Name="txtData" HorizontalAlignment="Left" Margin="524,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175" Height="22" TextBlock.FontFamily="Arial" Grid.Column="1"/>

            <Label Content="PRODUÇÃO MENSAL:" HorizontalAlignment="Left" Margin="293,116,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial" FontWeight="Bold" Grid.Column="1"/>

            <Label Content="PRODUÇÃO REAL:" HorizontalAlignment="Left" Margin="524,177,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial" FontWeight="Bold" Grid.Column="1"/>
            <Button x:Name="btnConsutarProd" Content="CONSULTAR PRODUÇÃO" HorizontalAlignment="Left" Margin="427,291,0,0" VerticalAlignment="Top" Width="217" TextBlock.FontFamily="Arial" Background="#FF1E4B88" Height="25" FontWeight="Bold" Foreground="White" BorderBrush="#FF1E4B88" Click="btnConsutarProd_Click" Grid.Column="1"/>
            <Button Content="VOLTAR" HorizontalAlignment="Left" Margin="35,367,0,10" TextBlock.FontFamily="Arial" Foreground="White" BorderBrush="#FF77BBE0" Background="#FF1E4B88" Width="95" Click="Button_Click_1" Grid.Column="1"/>
            <Button x:Name="btnSalvar" Content="SALVAR" HorizontalAlignment="Left" Margin="580,366,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial" Foreground="White" BorderBrush="#FF1E4B88" Background="#FF1E4B88" Height="26" Width="96" Click="btnSalvar_Click" Grid.Column="1"/>
            <Button Content="CANCELAR" HorizontalAlignment="Left" Margin="314,366,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial" Foreground="White" BorderBrush="#FF1E4B88" Background="#FF1E4B88" Height="25" Width="96" Click="Button_Click" RenderTransformOrigin="-1.264,0.154" Grid.Column="1"/>
            <TextBox x:Name="txtQuantidade" HorizontalAlignment="Left" Margin="8,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="217" Height="22" TextBlock.FontFamily="Arial" Grid.Column="1"/>
            <Label Content="PRODUÇÃO SEMANAL:" HorizontalAlignment="Left" Margin="524,116,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial" FontWeight="Bold" RenderTransformOrigin="0.5,0.5" Grid.Column="1"/>
            <TextBox x:Name="txtProducaoSemanal" HorizontalAlignment="Left" Margin="524,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175" Height="22" TextBlock.FontFamily="Arial" Grid.Column="1"/>
            <Image Margin="336,-395,376,-14" Source="/Image1.png" Stretch="Fill" Width="50" RenderTransformOrigin="0.5,0.5" Height="NaN" Grid.Column="1">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-90.018"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="REGISTRAR PRODUÇÃO" VerticalAlignment="Top" FontFamily="Arial" Height="24" Width="230" FontSize="18" FontWeight="Bold" Foreground="#FFFBFBFB" RenderTransformOrigin="0.333,0.552" Grid.Column="1" Margin="247,0,0,0"/>
            <TextBox x:Name="txtProducaoMensal" HorizontalAlignment="Left" Margin="293,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Height="20" Grid.Column="1"/>
            <TextBox x:Name="txtProducaoReal" HorizontalAlignment="Left" Margin="524,206,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="152" Grid.Column="1"/>
            <Label Content="PRODUÇÃO ESPERADA:" HorizontalAlignment="Left" Margin="293,177,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial" FontWeight="Bold" Grid.Column="1"/>
            <TextBox x:Name="txtProducaoEsperada" HorizontalAlignment="Left" Margin="293,205,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Height="20" Grid.Column="1"/>
            <Label Content="NOME:" HorizontalAlignment="Left" Margin="293,65,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial" FontWeight="Bold" RenderTransformOrigin="0.843,0.401" Grid.Column="1"/>
            <TextBox x:Name="txtNomee" HorizontalAlignment="Center" Margin="0,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175" Height="22" TextBlock.FontFamily="Arial" Grid.Column="1"/>
        </Grid>

    </Grid>
</Window>
