<Window x:Class="SistemaAGROAVE.Views.ControlarPerfilFuncionario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaAGROAVE.Views"
        mc:Ignorable="d"
        Title="ControlarPerfilFuncionario" Height="450" Width="800">
    <Grid>
        <Image Margin="375,-376,375,9" Source="/Image1.png" Stretch="Fill" Width="50" RenderTransformOrigin="0.5,0.5" Height="NaN">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90.018"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Label Content="CONTROLAR ACESSO DE PERFIL DO FUNCIONÁRIO" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-11.579,-4.698" FontFamily="Arial" FontWeight="Bold" Width="491" FontSize="18" Height="37" Foreground="White"/>
        <Label Content="NOME:" HorizontalAlignment="Left" Margin="200,72,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial" FontWeight="Bold"/>
        <Label Content="RG:" HorizontalAlignment="Left" Margin="200,181,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial" FontWeight="Bold" RenderTransformOrigin="0.811,-0.252"/>
        <TextBox x:Name="txtRg" HorizontalAlignment="Left" Margin="198,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="144" RenderTransformOrigin="0.5,0.5" TextBlock.FontFamily="Arial" Height="21">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.044"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Label Content="EMAIL:" HorizontalAlignment="Left" Margin="276,257,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial" FontWeight="Bold"/>
        <TextBox x:Name="txtNome" HorizontalAlignment="Left" Margin="200,96,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="298" Height="22" TextBlock.FontFamily="Arial" />
        <Label Content="CPF:" HorizontalAlignment="Left" Margin="200,130,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial" FontWeight="Bold" RenderTransformOrigin="-0.27,0.563"/>
        <TextBox x:Name="txtCpf" HorizontalAlignment="Left" Margin="200,154,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="230" Height="22" TextBlock.FontFamily="Arial"/>
        <Label Content="TELEFONE:" HorizontalAlignment="Left" Margin="30,257,0,0" VerticalAlignment="Top" RenderTransformOrigin="-11.579,-4.698" FontFamily="Arial" FontWeight="Bold" Width="70"/>
        <TextBox x:Name="txtTelefone" HorizontalAlignment="Left" Margin="34,286,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="168" Height="22"/>
        <Label Content="SETOR:" HorizontalAlignment="Left" Margin="560,67,0,0" VerticalAlignment="Top" RenderTransformOrigin="-11.579,-4.698" FontFamily="Arial" FontWeight="Bold" Width="55"/>
        <Label Content="FUNÇÃO:" HorizontalAlignment="Left" Margin="560,130,0,0" VerticalAlignment="Top" TextBlock.FontFamily="Arial" FontWeight="Bold" RenderTransformOrigin="-0.996,5.413"/>
        <ComboBox x:Name="cbFuncao" HorizontalAlignment="Left" Margin="560,160,0,0" VerticalAlignment="Top" Width="186" Height="22">
            <ComboBoxItem>Vendedor</ComboBoxItem>
            <ComboBoxItem>Caixista</ComboBoxItem>
            <ComboBoxItem>Entregador</ComboBoxItem>
            <ComboBoxItem>Gerente</ComboBoxItem>
            <ComboBoxItem>Veterinário</ComboBoxItem>
            <ComboBoxItem>Cuidador de Aves</ComboBoxItem>
            <ComboBoxItem>Zelador</ComboBoxItem>
        </ComboBox>
        <Button Content="Voltar" HorizontalAlignment="Left" Margin="55,365,0,0" VerticalAlignment="Top" Width="126" Height="33" Background="#FF1E4B88" FontFamily="Arial" FontWeight="Bold" Foreground="White" BorderBrush="#FF1E4B88" Click="Button_Click_1"/>
        <Button Content="Salvar"  HorizontalAlignment="Left" Margin="613,365,0,0" VerticalAlignment="Top" Width="126" Height="33" Background="#FF1E4B88" FontFamily="Arial" FontWeight="Bold" Foreground="White" BorderBrush="#FF1E4B88" Click="Button_Click"/>
        <Button Content="Cancelar" HorizontalAlignment="Center" Margin="0,365,0,0" VerticalAlignment="Top" Width="128" Height="33" Background="#FF1E4B88" FontFamily="Arial" FontWeight="Bold" Foreground="White" BorderBrush="#FF1E4B88" Click="Button_Click_2"/>
        <Button x:Name="btnConsultarPerfilFuncionario" Content="CONSULTAR ACESSO PERFIL DO FUNCIONÁRIO" HorizontalAlignment="Left" Margin="488,237,0,0" VerticalAlignment="Top" Width="294" Height="32" Background="#FF1E4B88" FontFamily="Arial" FontWeight="Bold" Foreground="White" BorderBrush="#FF1E4B88" Click="btnConsultarPerfilFuncionario_Click"/>
        <TextBox x:Name="txtSetor" HorizontalAlignment="Left" Margin="560,96,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Height="22" TextBlock.FontFamily="Arial"/>
        <Image Margin="19,68,619,202" Source="/usuario-de-perfil.png" Stretch="Fill"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="275,283,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205" RenderTransformOrigin="0.5,0.5" TextBlock.FontFamily="Arial" Height="22">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.044"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
    </Grid>
</Window>
